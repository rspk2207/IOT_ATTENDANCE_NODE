    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form action="/auth/signup" method="post">
                <h1>Create Account</h1>
                <br>
                
                <input name="name" type="text" placeholder="Name" />
                <input name="email" type="email" placeholder="Email" />
                <input name="contactNumber" type="Number" placeholder="Contact Number" />
                <input name="password" type="password" placeholder="Password" />
                <input name="parentsContactNumber" type="text" placeholder="Parents Contact Number" />
                <input name="rollNumber" type="text" placeholder="Roll Number" />
                <input name="verifypassword" type="password" placeholder="Verify Password" />
                
                <button style="color:white">Sign Up</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form action="/auth/signin" method="post">
                <h1>Sign in</h1>

                <span>already have an account? log in!</span>
                <input name="email" type="email" placeholder="Email" />
                <input name="password" type="password" placeholder="Password" />
                <a href="#" style="color:black">Forgot your password?</a>
                <button style="color:white">Sign In</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <br>

                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>First time here?</h1>
                    <p>Enter your personal details </p>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
